[
  {
    "id": "high-value-transaction",
    "name": "High-Value Transaction Policy",
    "description": "Flags any transaction over 5000 EUR.",
    "data_type": "transaction",
    "rules": [
      {
        "field": "amount",
        "operator": ">",
        "value": 5000
      },
      {
        "field": "currency",
        "operator": "==",
        "value": "EUR"
      }
    ]
  },
  {
    "id": "suspicious-country-transaction",
    "name": "Suspicious Country Transaction Policy",
    "description": "Flags transactions to/from Cayman Islands.",
    "data_type": "transaction",
    "rules": [
      {
        "field": "country",
        "operator": "==",
        "value": "Cayman Islands"
      }
    ]
  },
  {
    "id": "low-credit-score-loan",
    "name": "Low Credit Score Loan Application Policy",
    "description": "Flags loan applications with a credit score below 600.",
    "data_type": "loan_application",
    "rules": [
      {
        "field": "credit_score",
        "operator": "<",
        "value": 600
      }
    ]
  },
  {
    "id": "data-retention-policy",
    "name": "Data Retention Policy",
    "description": "Flags data older than 7 years for GDPR compliance.",
    "data_type": "data_record",
    "rules": [
      {
        "field": "age_in_years",
        "operator": ">",
        "value": 7
      }
    ]
  },
  {
    "id": "unauthorized-config-change",
    "name": "Unauthorized Configuration Change Policy",
    "description": "Flags any unauthorized changes to critical system configurations.",
    "data_type": "system_config",
    "rules": [
      {
        "field": "authorized_approver",
        "operator": "==",
        "value": "false"
      },
      {
        "field": "change_type",
        "operator": "==",
        "value": "critical"
      }
    ]
  }
]